<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login sso</title>
  <!-- Latest compiled and minified CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e" crossorigin="anonymous">

  <style>
    .login-container {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 50%;
      min-height: 100vh;
    }
    .social {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .social__google, .social__facebook {
      font-size: 30px;
      cursor: pointer;
      padding: 0 8px;
      margin-top: 1rem;
    }

    .social__google {
      color: #50C7C7;
    }

    .social__facebook {
      color: #3b5998;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row">
      <form>
        <div class="login-container col-6 mx-auto">
          <fieldset class="border rounded-3 p-3 w-100">
            <legend class="float-none w-auto px-3">Login form:</legend>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <input type="password" class="form-control" id="exampleInputPassword1">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
            <hr/>
            <div style="text-align:center;">
              <span>or Login with:</span>
            </div>
            <div class="social">
              <i class="bi bi-google social__google" title="Login google"></i>
              <i class="bi bi-facebook social__facebook" title="Login facebook"></i>
            </div>
          </fieldset>
        </div>
      </form>
    </div>
</body>

</html>